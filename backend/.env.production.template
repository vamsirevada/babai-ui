# Production Environment Template
# Copy this to .env.production for production deployment

NODE_ENV=production
PORT=4000

# Database Configuration (update with your production values)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_DATABASE=your-production-db-name
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password

# CORS Configuration (update with your frontend URL)
CORS_ORIGIN=https://your-frontend.amplifyapp.com

# JWT Configuration (use a secure random key in production)
JWT_SECRET=your-production-jwt-secret-min-32-chars
