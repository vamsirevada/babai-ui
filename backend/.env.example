# BAB AI Backend Environment Configuration
# Copy this to .env and configure all database settings

NODE_ENV=development
PORT=4000

# Database Configuration - REQUIRED
# You must configure these settings for the backend to work
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=babai_dev
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

