{
  "buildCommand": "npm run build || (rm -rf node_modules frontend/node_modules && npm install && npm run build)",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm ci",
  "rewrites": [
    {
      "source": "/api/review-order/:id",
      "destination": "/api/review-order?id=:id"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
